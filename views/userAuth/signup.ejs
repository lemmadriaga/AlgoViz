<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Signup Page</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <style>
      .background-image {
        background-image: url("/assets/university.png");
        background-size: cover;
        background-position: center;
      }
    </style>
    <link rel="stylesheet" href="css/particles.css">
  </head>
  <body class="flex items-center justify-center bg-gray-100 overflow-y-auto">
    <div id="particles-js"></div>
    <div class="flex w-full max-w-5xl shadow-lg rounded-lg bg-white m-10 h-auto">
      <div class="w-full md:w-1/2 p-8 md:p-12">
        <h2 class="text-3xl font-bold text-purple-700 mb-6">Sign Up</h2>

        <form id="signupForm" class="space-y-4">
          <div>
            <label for="fullName" class="block text-gray-600">Full Name</label>
            <input
              type="text"
              id="fullName"
              name="fullName"
              class="w-full px-4 py-2 mt-1 border rounded-md focus:outline-none focus:ring-2 focus:ring-purple-700"
              placeholder="Full Name"
              required
            />
          </div>

          <div>
            <label for="email" class="block text-gray-600">Email Address</label>
            <input
              type="email"
              id="email"
              name="email"
              class="w-full px-4 py-2 mt-1 border rounded-md focus:outline-none focus:ring-2 focus:ring-purple-700"
              placeholder="Email Address"
              required
            />
          </div>

          <div>
            <label for="password" class="block text-gray-600">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="w-full px-4 py-2 mt-1 border rounded-md focus:outline-none focus:ring-2 focus:ring-purple-700"
              placeholder="Password"
              required
            />
          </div>

          <div>
            <label for="phone" class="block text-gray-600">Phone Number</label>
            <input
              type="tel"
              id="phone"
              name="phone"
              class="w-full px-4 py-2 mt-1 border rounded-md focus:outline-none focus:ring-2 focus:ring-purple-700"
              placeholder="Phone Number"
            />
          </div>

          <div>
            <label for="birthDate" class="block text-gray-600"
              >Birth Date</label
            >
            <input
              type="date"
              id="birthDate"
              name="birthDate"
              class="w-full px-4 py-2 mt-1 border rounded-md focus:outline-none focus:ring-2 focus:ring-purple-700"
              required
            />
          </div>

          <button
            type="submit"
            class="w-full py-3 mt-4 bg-purple-700 text-white font-semibold rounded-md hover:bg-purple-800 focus:outline-none"
          >
            Submit
          </button>

          <div class="flex items-center mt-4">
            <input
              type="checkbox"
              id="terms"
              name="terms"
              class="mr-2"
              required
            />
            <label for="terms" class="text-gray-600 text-sm">
              Agree to terms and conditions?
            </label>
          </div>

          <div class="text-center mt-4">
            <p class="text-sm text-gray-600">
              Already have an account?
              <a href="/login" class="text-purple-700 hover:underline">Login</a>
            </p>
          </div>
        </form>

        <p id="signupMessage" class="text-red-500 mt-4"></p>
      </div>

      <div
        class="hidden md:flex md:w-1/2 background-image items-center justify-center p-8"
      >
        <div class="w-4/5 bg-white p-4 shadow-md rounded-md">
          <h3 class="text-lg font-bold text-gray-700">Terms and Conditions</h3>
          <p class="text-sm text-gray-600 mt-2">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer nec
            odio. Praesent libero. Sed cursus ante dapibus diam.
          </p>
        </div>
      </div>
    </div>

    <script src="/js/global.js"></script>
    <script>
      document
        .getElementById("signupForm")
        .addEventListener("submit", async (event) => {
          event.preventDefault();

          const email = document.getElementById("email").value;

          const emailPattern = /^[a-z0-9._%+-]+@g\.batstate-u\.edu\.ph$/i;
          if (!emailPattern.test(email)) {
            document.getElementById("signupMessage").innerText =
              "Use BatStateU GSuite Account example@g.batstate-u.edu.ph";
            return;
          }

          const fullName = document.getElementById("fullName").value;
          const password = document.getElementById("password").value;
          const phone = document.getElementById("phone").value;
          const birthDate = document.getElementById("birthDate").value;

          try {
            const response = await fetch("/api/signup", {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({
                fullName,
                email,
                password,
                phone,
                birthDate,
              }),
            });

            const result = await response.json();

            if (response.ok) {
              document.getElementById("signupMessage").innerText =
                "Signup successful!";
              document
                .getElementById("signupMessage")
                .classList.remove("text-red-500");
              document
                .getElementById("signupMessage")
                .classList.add("text-green-500");
            } else {
              document.getElementById("signupMessage").innerText = result.error;
            }
          } catch (error) {
            document.getElementById("signupMessage").innerText =
              "Error: " + error.message;
          }
        });
    </script>
  </body>
</html>
